{
  "rules": {
    "session": {
      ".read": true,
      ".write": "!data.exists()",
      ".validate": "newData.hasChildren(['id', 'label', 'createdAt'])",
      "id": {
        ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
      },
      "label": {
        ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
      },
      "createdAt": {
        ".validate": "newData.isNumber() && newData.val() > 0"
      },
      "$other": {
        ".validate": false
      }
    },

    "uploads": {
      ".read": true,
      ".write": "root.child('session').exists()",
      
      "$sessionId": {
        ".read": true,
        ".write": "root.child('session').exists()",
        
        "$uploadId": {
          ".read": true,
          ".write": "root.child('session').exists()",
          
          ".validate": "newData.hasChildren(['uid', 'imagePath', 'status'])",
          
          "uid": {
            ".validate": "newData.isString()"
          },
          "imagePath": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "status": {
            ".validate": "newData.isString() && (newData.val() == 'pending' || newData.val() == 'processing' || newData.val() == 'completed' || newData.val() == 'error')"
          },
          "fullText": {
            ".validate": "newData.isString()"
          },
          "lines": {
            ".validate": "newData.hasChildren()",
            "$index": {
              ".validate": "newData.isString()"
            }
          },
          "parsedAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "createdAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "updatedAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "$other": {
      ".read": false,
      ".write": false
    }
  }
}