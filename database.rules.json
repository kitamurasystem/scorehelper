{
  "rules": {
    "session": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".validate": "newData.hasChildren(['id', 'label', 'createdAt', 'driveFolderId', 'driveFolderIdMatch', 'driveFolderIdResult'])",

      "id": {
        ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 100"
      },
      "label": {
        ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 50"
      },
      "createdAt": {
        ".validate": "newData.isNumber() && newData.val() > 0"
      },
      "class_A": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "class_B": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "class_C": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "class_D": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "class_E": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "class_F": {
        ".validate": "newData.isNumber() && newData.val() >= 0 && newData.val() <= 50"
      },
      "driveFolderId": {
        ".validate": "newData.isString() && newData.val().length >= 25 && newData.val().length <= 50"
      },
      "driveFolderIdMatch": {
        ".validate": "newData.isString() && newData.val().length >= 25 && newData.val().length <= 50"
      },
      "driveFolderIdResult": {
        ".validate": "newData.isString() && newData.val().length >= 25 && newData.val().length <= 50"
      },
      "$other": {
        ".validate": false
      }
    },

    "uploads": {
      ".read": "auth != null",
      ".write": "auth != null",

      "$sessionId": {
        ".read": "auth != null",
        ".write": "auth != null",

        "$uploadId": {
          ".read": "auth != null",
          ".write": "auth != null",

          ".validate": "newData.hasChildren(['uid', 'imagePath', 'status'])",

          "uid": {
            ".validate": "newData.isString()"
          },
          "imagePath": {
            ".validate": "newData.isString() && newData.val().length > 0"
          },
          "status": {
            ".validate": "newData.isString() && (newData.val() == 'pending' || newData.val() == 'processing' || newData.val() == 'completed' || newData.val() == 'error')"
          },
          "fullText": {
            ".validate": "newData.isString()"
          },
          "lines": {
            ".validate": "newData.hasChildren()",
            "$index": {
              ".validate": "newData.isString()"
            }
          },
          "parsedAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "createdAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "updatedAt": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "$other": {
            ".validate": false
          }
        }
      }
    },

    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
