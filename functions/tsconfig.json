{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"], // targetに合わせる
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src", // ソースのルートを固定
    "outDir": "lib", // 出力先
    "declaration": true, // ★型定義ファイルを出力
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  },
  "include": ["src"]
}
